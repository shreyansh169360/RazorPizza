@page
@model RazorPizza.Pages.checkout.checkoutModel
@{
    var imagePath = "~/images/Pizzas/" + Model.ImageTitle + ".png";
}

<h1>Your Order</h1>
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true"/> 
        <p>Your order for the <strong>@Model.PizzaName</strong> is Ready</p>
        <p>Total Price of order is : <strong>@Model.PizzaPrice$</strong></p>
        <br />
        <a 
            class="btn alert-primary mt-1 mx-auto" 
            asp-area="" 
            asp-page="ThankYou"
             asp-route-ImageTitle="@Model.ImageTitle"
            asp-route-PizzaPrice="@Model.PizzaPrice"
            asp-route-PizzaName="@Model.PizzaName">
        Confirm Order</a>
    </div>
</div>